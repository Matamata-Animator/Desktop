{
  "name": "matamata",
  "version": "v2.0.0",
  "executableName": "Matamata Studio",
  "description": "Desktop GUI for Matamata",
  "author": {
    "name": "Matamata-Animator",
    "email": "matamata@aispawn.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Matamata-Animator/Matamata-Studio.git"
  },
  "license": "MIT",
  "main": "build/main.js",
  "devDependencies": {
    "@types/jquery": "^3.5.6",
    "@types/node": "^14.17.5",
    "@types/sound-play": "^1.1.0",
    "@types/wavesurfer.js": "^5.1.0",
    "copyfiles": "^2.4.1",
    "electron": "^13.6.9",
    "electron-builder": "^22.11.7",
    "electron-reloader": "^1.2.1",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.4.0"
  },
  "scripts": {
    "copy-files-old": "copyfiles -s -u 1 src/* src/**/* src/**/**/* src/**/**/**/* src/**/**/**/**/* src/**/**/**/**/**/* build/",
    "copy-files": "rsync -av --exclude='*.ts' src/ build/",
    "build": "tsc && npm run copy-files",
    "watch": "tsc-watch --onSuccess \"npm run copy-files\"",
    "start": "npm run build && electron . --no-sandbox",
    "pack": "electron-builder --dir",
    "full-dist": "npm run build && electron-builder -wl",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ffmpeg/core": "^0.10.0",
    "@ffmpeg/ffmpeg": "^0.10.1",
    "@types/node-fetch": "^2.5.11",
    "@types/p5": "^1.3.0",
    "dialogs": "^2.0.1",
    "dockerode": "^3.3.2",
    "download": "^8.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.1",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "extract-zip": "^2.0.1",
    "figlet": "^1.5.2",
    "fs-extra": "^10.1.0",
    "get-audio-duration": "^3.1.0",
    "ibm-watson": "^7.0.0",
    "is-elevated": "^3.0.0",
    "jimp": "^0.16.1",
    "jquery": "^3.6.0",
    "node-fetch": "^2.6.1",
    "node-gyp": "^9.1.0",
    "node-libcurl": "^2.3.4",
    "node-powershell": "^4.0.0",
    "open": "^8.2.1",
    "p5": "^1.4.0",
    "pako": "^2.0.4",
    "path": "^0.12.7",
    "spawn-command": "^0.0.2-1",
    "sudo-block": "^4.0.0",
    "sweetalert2": "^11.0.18",
    "terminal-kit": "^2.4.0",
    "typescript": "^4.3.5",
    "update-electron-app": "^2.0.1",
    "vosk": "^0.3.39",
    "wavesurfer.js": "^5.1.0",
    "yargs": "^17.5.1"
  },
  "build": {
    "appId": "com.aispawn.matamata",
    "productName": "Matamata Studio",
    "extraResources": [
      "build/render/Core/*",
      "build/render/Core/**/*",
      "build/render/Core/**/**/*"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Office",
      "publish": {
        "provider": "github"
      }
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "ffmpeg",
        "python3-pip",
        "python3-opencv",
        "docker.io",
        "curl",
        "gstreamer1.0-libav"
      ]
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "NSIS"
      ],
      "publish": {
        "provider": "github"
      }
    },
    "files": [
      "build/"
    ]
  }
}
