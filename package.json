{
  "name": "matamata",
  "executableName": "Matamata Desktop",
  "description": "Desktop GUI for Matamata",
  "author": {
    "name": "Matamata-Animator",
    "email": "matamata@aispawn.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Matamata-Animator/Desktop.git"
  },
  "license": "MIT",
  "version": "v0.1.9",
  "main": "build/main.js",
  "devDependencies": {
    "@types/node": "^14.17.5",
    "@types/sound-play": "^1.1.0",
    "@types/wavesurfer.js": "^5.1.0",
    "copyfiles": "^2.4.1",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "electron-reloader": "^1.2.1",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.4.0"
  },
  "scripts": {
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.png src/**/*.svg src/**/*.icns src/**/*.ico build/",
    "build": "tsc && yarn run copy-files",
    "watch": "tsc-watch --onSuccess \"yarn run copy-files\"",
    "start": "yarn run build && electron .",
    "pack": "electron-builder --dir",
    "full-dist": "yarn run build && electron-builder -wl",
    "dist": "yarn run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "dialogs": "^2.0.1",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9",
    "typescript": "^4.3.5",
    "update-electron-app": "^2.0.1",
    "wavesurfer.js": "^5.1.0"
  },
  "build": {
    "appId": "com.aispawn.matamata",
    "productName": "Matamata Desktop",
    "linux": {
      "target": [
        "snap"
      ],
      "category": "Office",
      "publish": {
        "provider": "snapStore",
        "channels": [
          "edge"
        ]
      }
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "NSIS"
      ],
      "publish": {
        "provider": "github"
      }
    },
    "files": [
      "build/"
    ]
  }
}
