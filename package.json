{
  "name": "matamatadesktop",
  "executableName": "Matamata Desktop",
  "description": "Desktop GUI for Matamata",
  "license": "MIT",
  "version": "0.1.0",
  "main": "build/main.js",
  "devDependencies": {
    "@types/node": "^14.17.5",
    "@types/sound-play": "^1.1.0",
    "@types/wavesurfer.js": "^5.1.0",
    "copyfiles": "^2.4.1",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "electron-reloader": "^1.2.1",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.4.0"
  },
  "scripts": {
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.png src/**/*.svg build/",
    "compile": "tsc && npm run copy-files",
    "watch": "tsc-watch --onSuccess \"npm run copy-files\"",
    "start": "npm run compile && electron ."
  },
  "dependencies": {
    "dialogs": "^2.0.1",
    "typescript": "^4.3.5",
    "wavesurfer.js": "^5.1.0"
  }
}
